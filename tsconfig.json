{
	"compilerOptions": {
		"baseUrl": ".",
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "es2023",
		"allowJs": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"moduleResolution": "bundler",
		"importHelpers": true,
		"isolatedModules": true,
		"strictNullChecks": true,
		"lib": ["DOM", "ESNext"],
		"jsx": "react",
		"composite": true,
		"skipDefaultLibCheck": true,
	},
	"include": ["**/*.ts", "**/*.tsx", "**/*.css"],
	"references": [
		{ "path": "../../packages/tldraw" }
	]
}
